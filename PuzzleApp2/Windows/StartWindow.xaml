<Window x:Class="PuzzleApp2.Windows.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StartScreen" Height="360" Width="360">
    
    <Grid Margin="36">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" x:Name="newTrialButton" Content="New Trial" Click="newTrialButton_Click" />
        <Button Grid.Row="1" x:Name="rankingButton" Content="Ranking" Click="rankingButton_Click" />
        <Button Grid.Row="2" x:Name="quitButton" Content="Quit" Click="quitButton_Click" />

    </Grid>
    
</Window>
