<Window x:Class="PuzzleApp2.Windows.RankingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RankingWindow" Height="700" Width="400"
        Loaded="Window_Loaded">
    <StackPanel>
        <ListView HorizontalAlignment="Left"
		  Height="600" Margin="10,10,0,0" VerticalAlignment="Top" Width="400"
		  Name="rankingList">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="playersNickname"
				    DisplayMemberBinding="{Binding playersNickname}"
				    Width="150"/>
                    <GridViewColumn Header="trialName"
				    DisplayMemberBinding="{Binding trialName}"
				    Width="100"/>
                    <GridViewColumn Header="scoreValue"
				    DisplayMemberBinding="{Binding scoreValue}"
				    Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="Back" Content="Back" Click="Back_Click"/>
    </StackPanel>
</Window>
