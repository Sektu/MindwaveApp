<Window x:Class="PuzzleApp2.Windows.NicknameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NicknameWindow" Height="300" Width="300">
    <Grid Margin="36">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Text="Please, put your nickname below. :]" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <TextBox x:Name="nicknameTextBox" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" x:Name="backButton" Content="Back" Click="backButton_Click" ></Button>
            <Button Grid.Column="1" x:Name="nextButton" Content="Next" Click="nextButton_Click"></Button>
        </Grid>
    </Grid>
</Window>
